{% block title %}Distance{% endblock %}

{% block body %}
    <h1>Distance</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ distance.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ distance.titre }}</td>
            </tr>
