{% extends 'base.html.twig' %}

{% block title %}Poids index{% endblock %}

{% block body %}
    <h1>Poids index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Decription</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for poid in poids %}
            <tr>
                <td>{{ poid.id }}</td>
                <td>{{ poid.titre }}</td>
                <td>{{ poid.decription }}</td>
                <td>{{ poid.status }}</td>
                <td>
                    <a href="{{ path('app_poids_show', {'id': poid.id}) }}">show</a>
                    <a href="{{ path('app_poids_edit', {'id': poid.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_poids_new') }}">Create new</a>
{% endblock %}
